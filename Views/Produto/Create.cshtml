@model IEnumerable<SWII6.TP03.Models.Produto>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Preco">Preço</label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="QuantidadeEmEstoque">Quantidade em Estoque</label>
        <input asp-for="QuantidadeEmEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>

<a href="@Url.Action("Index", "Produto")" class="btn btn-default">Cancelar</a>